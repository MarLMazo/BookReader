@model BookReader.Models.Book

@{
    ViewBag.Title = "Create";
}

<h2>Add New Book</h2>


<form action="/Book/Create" method="post">

    <div class="form-group">
        <div>
            <label class="control-label col-md-2" for="BookTitle">Title:</label>
            <span class="field-validation-error text-danger" data-valmsg-for="BookTitle" data-valmsg-replace="true"></span>
        </div>
        <div class="col-md-10">
            <input class="form-control text-box single-line" data-val="true" data-val-required="" id="BookTitle" name="BookTitle" type="text" value="">

        </div>
    </div>

    <div class="form-group">
        <div>
            <label class="control-label col-md-2" for="BookDescrp">Description:</label>
            <span class="field-validation-error text-danger" data-valmsg-for="BookDescrp" data-valmsg-replace="true"></span>
        </div>

        <div class="col-md-10">
            <textarea class="form-control single-line" data-val="true" data-val-required="Description is required"  id="BookDescrp" name="BookDescrp" rows="8"></textarea>
            
        </div>
    </div>

    <div class="form-group">
        <div>
            <label class="control-label col-md-2" for="BookAuthor">Author:</label>
            <span class="field-validation-error text-danger" data-valmsg-for="BookAuthor" data-valmsg-replace="true"></span>
        </div>

        <div class="col-md-10">
            <input class="form-control text-box single-line" data-val="true" data-val-required="Author is required"  id="BookAuthor" name="BookAuthor" type="text" value="">
           
        </div>
    </div>

    <div class="form-group">
        <div>
            <label class="control-label col-md-2" for="BookPublish">Published Date:</label>
            <span class="field-validation-error text-danger" data-valmsg-for="BookPublish" data-valmsg-replace="true"></span>
        </div>

        <div class="col-md-10">
            <input class="form-control text-box single-line" data-val="true" data-val-required=" Publish Date is required"  id="BookPublish" name="BookPublish" type="date" value="">
   
        </div>
    </div>


    <div class="form-group">
        <button type="submit" value="Create" class="btn btn-primary">Add New Book</button>
    </div>

</form>

<div>
    <a href="/Book/List">Back to List</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
